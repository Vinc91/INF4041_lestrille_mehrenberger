<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.esiea.mehrenberger_lestrille.myapp.AbonnementActivity">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/app_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="14dp"
        android:id="@+id/textView5"
        android:text="@string/choixAbonnement"
        android:gravity="center"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:text="Offre Decouverte (sans obligation d'achat)"
        android:gravity="center"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:text="@string/price1"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:text="@string/price2"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Devenez un expert de la bière ! 84 bières du monde et 12 verres collector. Paiement en 1 fois par carte bancaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/editText2"
        android:layout_toStartOf="@+id/editText2" />

    <Button
        android:text="Validate /year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_marginRight="75dp"
        android:layout_marginEnd="75dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Validate /month"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Offre Golden Premium      "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:gravity="right"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <TextView
        android:text="8 bières du monde and 1 verre collector chaque mois. Prélèvement par carte de credit le 6 de chaque mois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/textView3"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/textView3" />


</RelativeLayout>
